<h1>Calendar</h1>

<p id="notice"><%= notice %></p>

<%= link_to 'New Lesson', new_lesson_path %>
<br></br>
<%= form_tag lessons_path, :method => :get, :id => 'grade_levels_form' do %>
  Grade Level: 
  <% @all_grade_levels.each do |grade_level| %>
    <%= grade_level %>
    <%= check_box_tag "grade_levels[#{grade_level}]", 1, @selected_grade_levels.include?(grade_level), :id => "grade_levels_#{grade_level}" %>
  <% end %>
  <%= submit_tag 'Refresh', :id => 'grade_levels_submit' %>
<% end %>
<br>

<div class= "monthCalendar">
<%= link_to 'View Current Month', 
        lessons_path(:start_date => Date.today) %>
<%= month_calendar events: @lessons do |date, lessons| %>
  <strong><%= date.day %></strong>

  <% lessons.each do |lesson| %>
    <div>
      <%= link_to lesson.title, lesson %>
      <%= link_to '(Delete)', lesson, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
<% end %>
</div>

